<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '',
                      class: 'event-background',
                      style: "background-image: url(#{event_photo(@event)})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description mx-3">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address, "#" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="my-3">
              <%= link_to t('buttons.edit'), edit_event_path(@event), class: 'btn btn-primary mr-2' %>
              <%= link_to t('buttons.delete'), event_path(@event),
                          method: :delete,
                          data: {confirm: t('event.show.delete_alert')},
                          class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-photos mb-5">
        <div class="event-photos-gallery">
          <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
        </div>
        <% if current_user %>
          <div class="event-photo-form">
            <%= render partial: 'photos/form', locals: { photo: @new_photo || @event.photos.build } %>
          </div>
        <% end %>
      </div>
      <div class="event-comments mt-3">
        <div class="my-3">
          <%= render partial: 'comments/comment', collection: @event.comments.except(@new_comment).order(created_at: :desc) %>
        </div>

        <%= render partial: 'comments/form', locals: { comment: @new_comment || @event.comments.build } %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner mb-3">
        <div class="row">
          <div class="col-lg-4">
            <h4><%= t('event.show.organizer') %>:</h4>
          </div>
          <div class="col-lg-8 pt-lg-1">
            <p><%= render partial: 'users/user', object: @event.user %></p>
          </div>
        </div>
      </div>

      <div class="event-subscriptions mb-3">
        <div class="row">
          <div class="col-lg-4">
            <h4><%= t('event.show.members') %>:</h4>
          </div>
          <div class="col-lg-8 pt-lg-1">
            <%= render partial: 'subscriptions/subscription', collection: @event.subscriptions.except(@new_subscription) %>
          </div>
        </div>
      </div>

      <% unless current_user == @event.user %>
        <div class="event-subscription-form">
          <h4><%= t('event.show.participate') %>:</h4>
          <div>
            <%= render partial: 'subscriptions/form', locals: { subscription: @new_subscription || @event.subscriptions.build } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
