<h1><%= t('.title') %></h1>
<div class="row">
  <div class="col-md-6 mt-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "partials/form_errors", model: resource %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('.btn_log_in'), class: 'btn btn-primary' %>
        <%= t('text.or') %> <%= link_to t('devise.shared.links.btn_sign_up'), new_registration_path(resource_name) %>
      </div>

      <p class="mt-3">
        <%= link_to t('devise.shared.links.btn_forgot_password'), new_password_path(resource_name) %>
      </p>
  <% end %>
  </div>
</div>
